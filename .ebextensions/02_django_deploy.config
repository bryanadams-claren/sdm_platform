# .ebextensions/02_django_deploy.config

container_commands:
  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
    cwd: /var/app/staging
  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
    cwd: /var/app/staging

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
