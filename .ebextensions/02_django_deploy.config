# .ebextensions/02_django_deploy.config

container_commands:
  01_migrate:
    command: "source $PYTHONHOME/activate && python manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source $PYTHONHOME/activate && python manage.py collectstatic --noinput"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
